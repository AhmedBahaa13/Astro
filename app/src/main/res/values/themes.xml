<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.IntegrationApp" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor">@color/blackColor</item>

        <item name="android:button">@style/ButtonStyle</item>
    </style>

    <style name="AlertDialogTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AlertDialogActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">128dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
    </style>

    <!-- If you override alert dialog layout you should override styles below as well
         to apply custom text appearance for dialog buttons:
         CameraDialogPositiveButton, CameraDialogNegativeButton, CameraDialogNormalButton for camera screen and
         EditorDialogPositiveButton, EditorDialogNegativeButton, EditorDialogNormalButton for editor screen -->
    <style name="CameraDialogPositiveButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CameraDialogNegativeButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CameraDialogNormalButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditorDialogPositiveButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditorDialogNegativeButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditorDialogNormalButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Stickers Styles-->
    <style name="CustomStickersRetryTitleTextStyle" />

    <style name="CustomStickersRetryMessageTextStyle" />

    <style name="CustomStickersRetryBtnStyle" />
</resources>
