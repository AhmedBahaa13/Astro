<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sideMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_bottom_bar_shadow"
    android:paddingBottom="@dimen/_6sdp">

    <ImageView
        android:id="@+id/gift"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_23sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/gift"
        app:layout_constraintEnd_toStartOf="@+id/shared_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/username_layout"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <ImageView
        android:id="@+id/shared_layout"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:src="@drawable/send"
        app:layout_constraintBottom_toBottomOf="@+id/gift"
        app:layout_constraintEnd_toStartOf="@+id/tabFavourite"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gift"
        app:layout_constraintTop_toTopOf="@+id/gift" />

    <com.like.LikeButton
        android:id="@+id/tabFavourite"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:padding="0dp"
        app:icon_size="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="@+id/shared_layout"
        app:layout_constraintEnd_toStartOf="@+id/username_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shared_layout"
        app:layout_constraintTop_toTopOf="@+id/shared_layout"
        app:like_drawable="@drawable/saved_ic"
        app:liked="false"
        app:unlike_drawable="@drawable/save" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/username_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/trend"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tabFavourite"
        app:layout_constraintTop_toTopOf="parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_pic"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_user_icon"
            app:actualImageScaleType="centerCrop"
            app:failureImageScaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@drawable/ic_user_icon"
            app:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <ImageView
            android:id="@+id/ivAddFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/follow_button"
            app:layout_constraintBottom_toBottomOf="@+id/user_pic"
            app:layout_constraintEnd_toEndOf="@id/user_pic"
            app:layout_constraintTop_toBottomOf="@id/user_pic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:includeFontPadding="false"
        android:shadowColor="@color/blackColor"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/_7ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/username_layout"
        app:layout_constraintStart_toStartOf="@id/username_layout"
        app:layout_constraintTop_toBottomOf="@id/username_layout" />

    <ImageView
        android:id="@+id/varified_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verified"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/username"
        app:layout_constraintTop_toTopOf="@id/username" />

    <RelativeLayout
        android:id="@+id/duet_layout_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/username"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintTop_toBottomOf="@id/username">

        <TextView
            android:id="@+id/duet_txt"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/baloo2"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxWidth="@dimen/_40sdp"
            android:shadowColor="@color/blackColor"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:text="@string/duet_with"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_6ssp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/duet_open_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_toEndOf="@+id/duet_txt"
            android:background="@drawable/d_dark_gray_border"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_icon"
                app:tint="@color/blackColor" />

            <TextView
                android:id="@+id/duet_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:ellipsize="end"
                android:fontFamily="@font/baloo"
                android:maxLines="1"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_6ssp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/duet_layout_username"
        app:layout_constraintStart_toStartOf="@+id/duet_layout_username"
        app:layout_constraintTop_toBottomOf="@+id/duet_layout_username">

        <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/songs_icon_svg"
            app:tint="#99FFFFFF" />

        <TextView
            android:id="@+id/sound_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:ellipsize="marquee"
            android:fontFamily="@font/inter_extralight"
            android:includeFontPadding="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:shadowColor="@color/blackColor"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:singleLine="true"
            android:textColor="#99FFFFFF"
            android:textSize="@dimen/_6ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/trend"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:src="@drawable/explore_trend_ic"
        app:layout_constraintBottom_toBottomOf="@+id/tabFavourite"
        app:layout_constraintEnd_toStartOf="@+id/comment_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/username_layout"
        app:layout_constraintTop_toTopOf="@+id/tabFavourite"
        app:tint="#CCFFFFFF" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:paddingHorizontal="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/like_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/trend"
        app:layout_constraintTop_toTopOf="@+id/trend">

        <ImageView
            android:id="@+id/comment_image"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/voice_comment_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#CCFFFFFF" />


        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/baloo"
            android:text="21.2k"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/like_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/after_like_button_bg"
        android:backgroundTint="@android:color/transparent"
        android:paddingHorizontal="@dimen/_9sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/comment_layout"
        app:layout_constraintTop_toTopOf="@id/username_layout">

        <com.like.LikeButton
            android:id="@+id/likebtn"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:padding="0dp"
            app:icon_size="@dimen/_22sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:like_drawable="@drawable/default_love"
            app:liked="true"
            app:unlike_drawable="@drawable/new_like_icon" />

        <TextView
            android:id="@+id/likeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/baloo"
            android:text="21.2k"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/likebtn" />

        <TextView
            android:id="@+id/tvFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="21.2k"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/likebtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/desc_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:shadowColor="@color/blackColor"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:textAlignment="viewStart"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="@+id/like_layout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gift"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <FrameLayout
        android:id="@+id/bottomView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        app:layout_constraintEnd_toEndOf="@id/like_layout"
        app:layout_constraintStart_toStartOf="@id/desc_txt"
        app:layout_constraintTop_toBottomOf="@id/desc_txt">

        <RelativeLayout
            android:id="@+id/ViewForPlaylist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:visibility="gone"
            tools:visibility="visible" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
