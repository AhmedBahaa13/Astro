<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d_top_left_right_radius_white"
    android:backgroundTint="@color/black"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/goBack"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@color/black"
        android:src="@drawable/rounded_close_icon"
        app:circularflow_radiusInDP="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <TextView
        android:id="@+id/up_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="up star"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toBottomOf="@+id/goBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/goBack" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo"
        android:text="@string/astr"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:textSize="@dimen/_26ssp"
        app:layout_constraintEnd_toEndOf="@+id/up_star"
        app:layout_constraintTop_toBottomOf="@+id/up_star" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_34sdp"
        android:layout_height="0dp"
        android:src="@drawable/logo_up_star"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/up_star" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnPostVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#201F1F"
        android:paddingHorizontal="@dimen/_60sdp"
        android:paddingVertical="@dimen/_150sdp"

        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/btnGoLive"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnGoLive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:layout_marginVertical="@dimen/_60sdp"
            android:src="@drawable/plus_circle" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/baloo2_regular"
        android:text="Upload or create"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnPostVideo"
        app:layout_constraintStart_toStartOf="@+id/btnPostVideo"
        app:layout_constraintTop_toBottomOf="@+id/btnPostVideo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnGoLive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#161616"
        android:paddingHorizontal="@dimen/_60sdp"
        android:paddingVertical="@dimen/_150sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnPostVideo"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:layout_marginVertical="@dimen/_60sdp"
            android:src="@drawable/hotspot" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/baloo2_regular"
        android:text="Live now"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnGoLive"
        app:layout_constraintStart_toStartOf="@+id/btnGoLive"
        app:layout_constraintTop_toBottomOf="@+id/btnGoLive" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/login_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baloo2_regular"
        android:gravity="center"
        android:text="You can  Add and  share your Good"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/btnGoLive"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/btnPostVideo"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableEnd="@drawable/money_bag"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="@font/baloo2_regular"
        android:gravity="center"
        android:text=" content and earn"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/btnGoLive"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/btnPostVideo"
        app:layout_constraintTop_toBottomOf="@+id/login_title_txt" />

