<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/commentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_6sdp"
        android:padding="@dimen/_6sdp">


        <FrameLayout
            android:id="@+id/tabUserPic"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_pic"
                android:layout_width="32dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user_icon"
                app:actualImageScaleType="centerCrop"
                app:failureImageScaleType="centerCrop"
                app:placeholderImage="@drawable/ic_user_icon"
                app:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/message_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_toEndOf="@+id/tabUserPic"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/message_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/like_layout"
                    android:gravity="start|center_vertical"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo_da2_bold"
                            android:gravity="center_vertical|start"
                            android:text="@string/username"
                            android:textAlignment="viewStart"
                            android:textColor="#232222"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivVarified"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_verified"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/username"
                            app:layout_constraintStart_toEndOf="@id/username"
                            app:layout_constraintTop_toTopOf="@+id/username"
                            tools:visibility="visible" />


                        <LinearLayout
                            android:id="@+id/tabCreator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/username"
                            app:layout_constraintStart_toEndOf="@id/ivVarified"
                            app:layout_constraintTop_toTopOf="@+id/username"
                            tools:visibility="visible">

                            <View
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="@dimen/_4sdp"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:background="@drawable/ic_circle"
                                android:backgroundTint="@color/redColor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:text="@string/creator"
                                android:textColor="@color/redColor"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold" />

<!--                            <TextView-->
<!--                                android:id="@+id/tvMessageData"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:maxLines="1"-->
<!--                                android:text=""-->
<!--                                android:textColor="#BDBCBF"-->
<!--                                android:textSize="@dimen/_8ssp" />-->
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMessageData"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/baloo2_regular"
                            android:includeFontPadding="false"
                            android:text="23 h ago"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:textColor="#BDBCBF"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintBottom_toBottomOf="@+id/tabCreator"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tabCreator" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/baloo2_regular"
                        android:gravity="center_vertical|start"
                        android:text="@string/comment_message_here"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/voiceCommentPanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:background="@drawable/d_other_msg_background"
                        android:gravity="start|center_vertical"
                        android:paddingHorizontal="@dimen/_13sdp"
                        android:paddingVertical="@dimen/_9sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/btnPlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:clickable="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/play_audio_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white"
                            tools:ignore="ContentDescription" />

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toStartOf="@+id/voiceTime"
                            android:clickable="false"
                            android:theme="@style/MySeekBar2"
                            app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
                            app:layout_constraintEnd_toStartOf="@+id/voiceTime"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/btnPlay"
                            app:layout_constraintTop_toTopOf="@+id/btnPlay" />

                        <TextView
                            android:id="@+id/voiceTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="4dp"
                            android:gravity="start|center_vertical"
                            android:textAlignment="viewStart"
                            android:textColor="#CEA7FF"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/seekBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/seekBar"
                            app:layout_constraintTop_toTopOf="@+id/seekBar"
                            tools:text="00:01" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/like_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <ImageView
                        android:id="@+id/tabMessageReply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reply_ic" />

                    <ImageView
                        android:id="@+id/like_image"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:scaleType="fitCenter"
                        app:tint="@color/love_comment_default"
                        android:src="@drawable/love_comment" />

                    <TextView
                        android:id="@+id/like_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/baloo2_regular"
                        android:text="12"
                        android:textColor="@color/love_comment_default"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tabUserPic"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_below="@id/message_details_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center"
                android:background="#F0F0F0"/>

            <TextView
                android:id="@+id/see_replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:fontFamily="@font/baloo2_regular"
                android:text="see reply"
                android:visibility="gone"
                android:textColor="@color/love_comment_default"
                android:textSize="@dimen/_8ssp" />
            <TextView
                android:id="@+id/reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/baloo2_regular"
                android:textColor="#BDBCBF"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reply_layout"
            android:layout_alignStart="@+id/message_details_layout"
            android:layout_alignEnd="@+id/message_details_layout"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:textAlignment="viewStart">


                <LinearLayout
                    android:id="@+id/tabPinned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:background="@drawable/ractengle_light_gray_solid"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:visibility="gone"
                    tools:visibility="visible">


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pin_comment"
                        app:tint="@color/darkgray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="@string/pinned"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabLikedByCreator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/ractengle_light_gray_solid"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_6sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:visibility="gone"
                tools:visibility="visible">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="@string/liked_by_creator"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/_7sdp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/less_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reply_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/show_less_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/show_less"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>